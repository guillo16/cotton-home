<div class="container pt-5 mt-5">
  <h2 class="text-center">Contacto</h2>
  <div class="forms">
    <%= simple_form_for @contact do |f| %>
    <%= f.input :name, input_html: { class: "form-control form-control-lg"}  %>
    <%= f.input :email,input_html: { class: "form-control form-control-lg"} %>
    <%= f.input :message, :as => :text, input_html: { class: "form-control form-control form-control-lg", id:"exampleFormControlTextarea1", rows:"4" }%>
    <div class="d-none">
      <%= f.input :nickname %>
    </div>
    <%= f.submit 'Send', class: 'btn btn-primary btn-block btn-main m-0' %>
    <% end %>
  </div>
</div>
