<h2 class="font-weight-bold mb-3 pb-1 h3">1.Envío</h2>
<%= simple_form_for [@order, @shipping] do |f| %>
<div class="row">
  <div class="col">
    <%= f.input :shipping_method, collection: [['Zona 1 - $500', 'one'], ['Zona 2 - $600', 'two'], ['Zona 3 - $700', 'three'], ['Retiro por el local - $0', 'local']], label: false %>
  </div>
</div>
<div class="">
  <p class="mb-1"><strong>Zona 1:</strong> Buenos Aires, Cordoba, Entre Ríos, La Pampa, Santa Fe</p>
  <p class="mb-1"><strong>Zona 2:</strong> Catamarca, Chaco, Corrientes, Formosa, La Rioja, Mendoza, Misiones, Neuquen, Rio Negro, San Juan, San Luis, Santiago del Estero, Tucumán</p>
  <p class="mb-1"><strong>Zona 3:</strong> Chubut, Jujuy, Salta, Santa Cruz, Tierra del Fuego </p>
</div>
<h2 class="py-3 h3 font-weight-bold">2.Datos personales</h2>
<div class="row">
  <div class="col">
    <h3>Nombre</h3>
    <%= f.input :first_name, label: false %>
  </div>
  <div class="col">
    <h3>Apellido</h3>
    <%= f.input :last_name, label: false %>
  </div>
</div>
<div class="row">
  <div class="col">
    <h3>DNI</h3>
    <%= f.input :dni, label: false, input_html: { maxlength: "8" } %>
  </div>
</div>
<div class="row">
  <div class="col-7 col-md-5">
    <h3>Provincia</h3>
    <%= f.input :state, label: false %>
  </div>
  <div class="col-5 col-md-3">
    <h3>Código Postal</h3>
    <%= f.input :postal_code, label: false, as: :numeric %>
  </div>
  <div class="col col-md-4">
    <h3>Ciudad</h3>
    <%= f.input :city, label: false %>
  </div>
</div>
<div class="row">
  <div class="col">
    <h3>Dirección</h3>
    <%= f.input :address, label: false %>
  </div>
</div>
<div class="row">
  <div class="col-6">
    <h3>Número</h3>
    <%= f.input :number, label: false, as: :numeric %>
  </div>
  <div class="col-3">
    <h3>Piso</h3>
    <%= f.input :floor, label: false, as: :numeric %>
  </div>
  <div class="col-3">
    <h3>Depto</h3>
    <%= f.input :building, label: false %>
  </div>
</div>
<div class="row">
  <div class="col-4">
    <h3>Cód. Área</h3>
    <%= f.input :area_code, label: false, as: :numeric %>
  </div>
  <div class="col-8">
    <h3>Teléfono</h3>
    <%= f.input :phone, label: false, as: :numeric %>
  </div>
</div>
<div class="d-md-flex justify-content-between pt-4">
  <%= f.submit 'Continuar', class: 'btn btn-dark ml-md-5 py-2 order-2', id: 'btn-shipping' %>
  <p class="order-1 pt-2 pt-md-0 text-secondary">*Al hacer click en Continuar estás aceptando estos Términos y condiciones</p>
</div>
<% end %>
