<div class="container pt-5">
  <table class="table table-striped mt-5">
    <thead>
      <tr>
        <th>Categorias</th>
        <th>Categoria principal</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @sub_categories.each do |sub_category| %>
      <tr>
        <th class="font-weight-light"><%= sub_category.name %></th>
        <th class="badge badge-pill badge-primary h6 text-center mt-2"><%= sub_category.category.name %></th>
        <td class="text-right">
          <%= link_to 'ver', sub_category_path(sub_category), class: "pr-2" %>
          <%= link_to 'editar', edit_sub_category_path(sub_category), class: "pr-2" %>
          <% if current_user.permission_level? == "super_admin" %>
          <%= link_to 'eliminar', sub_category_path(sub_category),  method: :delete,  data: { confirm: 'Are you sure?' }, class: "text-danger"  %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-right mt-5">
    <%= link_to 'volver', :back, class: "btn btn-secondary"  %>
  </div>
</div>
