<div class="sub-categories">
  <div class="container">
    <div class="d-md-flex justify-content-center py-2 py-md-3 text-center px-3 px-md-0">
      <% category_name =  @sub_category.category.name %>
      <% sub_category_links = @sub_categories.filter { |sub_category| sub_category.category.name == category_name } %>
      <% sub_category_links.each do |g| %>
      <%= link_to sub_category_path(g) do  %>
      <h5 class="py-2 py-md-3 mb-0 border-bottom pl-md-3 text-body"><%= g.name %></h5>
      <% end %>
      <% end %>
    </div>
    <h3 class="text-center font-weight-bold py-3"><%= @sub_category.name %></h3>
    <div class="d-md-flex justify-content-center py-2 py-md-3 text-center px-3 px-md-0">
      <% @sub_category.products.uniq(&:color).each do |product| %>
      <p><%= link_to product.color, sub_category_path(color: product.color)%></p>
      <% end %>
    </div>
    <hr>
    <div id="category-container">
      <% @sub_category.products.each do |product| %>
      <%= render 'shared/product_card', product: product %>
      <% end %>
    </div>
  </div>
</div>


