<div class="container pt-5">
  <table class="table table-striped mt-5">
    <thead>
      <tr>
        <th>Categoria Principal</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
      <tr>
        <th class="font-weight-light"><%= category.name %></th>
        <td class="text-right">
          <%= link_to 'ver', category_path(category), class: "pr-2" %>
          <%= link_to 'editar', edit_category_path(category), class: "pr-2" %>
          <% if current_user.permission_level? == "super_admin" %>
          <%= link_to 'eliminar', category_path(category),  method: :delete,  data: { confirm: 'Are you sure?' }, class: "text-danger"  %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-right mt-5">
    <%= link_to 'menu', "#", class: "btn btn-secondary"  %>
  </div>
</div>
