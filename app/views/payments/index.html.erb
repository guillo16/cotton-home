<div class="container pt-5 mt-5" id="footer-margin">
  <h2 class="font-weight-bold pt-3 h3">PAGOS</h2>
  <table class="table table-bordered bg-white table-hover table-sm">
    <% @payments.each_with_index do |payment, index| %>
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Fecha</th>
        <th class= "d-none d-sm-block" scope="col">Numero de orden</th>
        <th scope="col">Total</th>
        <th scope="col">Pago</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th class="text-center" scope="row"><%= index + 1 %></th>
        <td><%= payment.created_at.in_time_zone("Buenos Aires").strftime('%d/%m/%y - %H:%M') %></td>
        <td class= "d-none d-sm-block"><%= payment.order.id %></td>
        <td><%= payment.order.total %></td>
        <td class="font-weight-bold"><%= payment.payment_status %></td>
        <td><%= link_to 'ver', payment_path(payment) %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>
