<div class="edit-wrapper">
  <div class="edit-container">
    <div class="text-center">
      <hr class="hr-text" data-content="Editar Usuario">
    </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <div class="d-none">
        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
      </div>
      <p>Email</p>
      <%= current_user.email %>
      <br><br>
      <p>Nombre</p>
      <%= f.input :name, required: true, autofocus: true, label: false %>
      <p>Dirección</p>
      <%= f.input :address, required: true, autofocus: true, label: false %>
      <div class="row">
        <div class="col-6">
          <p>Provincia</p>
          <%= f.input :state, required: true, autofocus: true, label: false %>
        </div>
        <div class="col-6">
          <p>Ciudad</p>
          <%= f.input :city, required: true, autofocus: true, label: false %>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
         <p>Codigo Postal</p>
         <%= f.input :zip_code, required: true, autofocus: true, label: false %>
       </div>
       <div class="col-6">
        <p>Teléfono</p>
        <%= f.input :phone, required: true, autofocus: true, label: false %>
      </div>
    </div>
    <p>Nueva contraseña</p>
    <%= f.input :password,
    hint: "Dejar en blanco si no queres cambiar la contraseña",
    required: false,
    label: false,
    input_html: { autocomplete: "new-password" } %>
    <p>Confirmar contraseña</p>
    <%= f.input :password_confirmation,
    required: false,
    label: false,
    input_html: { autocomplete: "new-password" } %>
    <p>Contraseña actual</p>
    <%= f.input :current_password,
    hint: "necesitamos tu contraseña actual para realizar los cambios",
    required: true,
    label: false,
    input_html: { autocomplete: "current-password" } %>
    <div class="form-actions mt-1">
      <%= f.button :submit, "Confirmar Cambios", class: 'btn btn-primary btn-block' %>
    </div>
    <% end %>
    <div class=" text-center mt-3">
      <p> Queres eliminar la cuenta? <%= link_to "Eliminar mi cuenta", registration_path(resource_name), data: { confirm: "Estas seguro? si eliminas tendras que volver a crear una para compar" }, method: :delete, class: "text-danger" %></p>
      <br>
      <%= link_to "Volver", user_path(@user), class: "btn btn-dark" %>
    </div>
  </div>
</div>
</div>
