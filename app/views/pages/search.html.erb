<div class="search-container">
  <div class="search-form">
    <%= form_tag pages_result_path,  method: :get  do %>
    <div class="form-inline">
      <%= text_field_tag :query,
      params[:query],
      class: "form-inline search-input",
        placeholder: "Buscar"
        %>
        <input type="submit" value="&#xf002" class="fas fa-search btn-search">
      </div>
      <% end %>
    </div>
    <div class="text-center pt-5 search-footer">
      <h2>NAVEGA POR CATEGORIAS</h2>
      <% @sub_categories.each do |category| %>
      <p><%= link_to category.name.upcase, sub_category_path(category) %></p>
      <% end %>
    </div>
    <div class="py-5 text-center">
      <%= link_to 'Volver', root_path, class: "btn btn-dark px-5"  %>
    </div>
  </div>
</div>
