<div class="d-none d-lg-block"id="<%= line_item.id %>" style="height:50px;">
</div>
<div class="line-wrapper py-3 py-md-5" >
  <div class="line-image">
    <img src="https://images.unsplash.com/photo-1517694712202-14dd9538aa97?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1950&q=80" alt="">
  </div>
  <div class="line-content pb-md-5">
    <h2 ><%= line_item.product.name %></h2>
    <h3 class="mt-3"><strong>TALLE:</strong> <%= line_item.variant.size %></h3>
    <div class="d-flex align-items-center py-2">
      <div class="mr-3">
        <span class="btn btn-outline-dark disabled py-2 px-4"><%= line_item.quantity %></span>
      </div>
      <div class="increase">
        <% stock = line_item.variant.stock - 1 %>
        <%= stock %>
        <% if line_item.quantity > 1 && line_item.quantity <= stock %>
        <td><%= link_to "+", increase_line_item_path(line_item),  method: :patch, remote: true, class:"badge badge-primary" %></td>
        <td><%= link_to "-", decrease_line_item_path(line_item), method: :patch, remote: true, class:"badge badge-primary" %></td>
        <% elsif line_item.quantity > stock  %>
        <td><%= link_to "-", decrease_line_item_path(line_item), method: :patch, remote: true, class:"badge badge-primary" %></td>
        <% else %>
        <td><%= link_to "+", increase_line_item_path(line_item), method: :patch, remote: true, class:"badge badge-primary" %></td>
        <% end %>
      </div>
    </div>
    <div class="line-price">
      <p><strong>PRECIO:</strong> <%= number_to_currency(line_item.total_price) %></p>
    </div>
    <div class="line-description">
      <%= link_to 'Quitar Articulo', line_item, method: :delete, data: { confirm: "Are you sure? " }  %>
    </div>
  </div>
</div>
